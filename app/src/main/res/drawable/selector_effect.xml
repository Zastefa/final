<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado presionado -->
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <bitmap android:src="@drawable/viaje"/>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#80000000"/> <!-- Color oscuro semitransparente -->
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Estado normal -->
    <item>
        <bitmap android:src="@drawable/viaje"/>
    </item>
</selector>