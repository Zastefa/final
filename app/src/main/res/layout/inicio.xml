<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".View.InicioActivity">

    <!-- Contenido principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/ore">

        <!-- ScrollView para el contenido desplazable -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Sección de eventos destacados -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"
                    android:text="@string/eventos_destacados"
                    android:background="@color/oren"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:padding="8dp"/>

                <!-- Filas de eventos (repetir según necesidad) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/event1"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/evento_viaje"
                        android:src="@drawable/viaje"
                        android:scaleType="centerCrop"
                        style="@style/ImageButtonStyle"
                        android:background="@drawable/selector_effect"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageButton
                        android:id="@+id/event2"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/evento_anime"
                        android:src="@drawable/anime"
                        android:scaleType="centerCrop"
                        style="@style/ImageButtonStyle"
                        android:background="@drawable/selector_effect"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

                <!-- Segunda fila de eventos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/event3"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/evento_3"
                        android:src="@drawable/tea"
                        android:scaleType="centerCrop"
                        style="@style/ImageButtonStyle"
                        android:background="@drawable/selector_effect"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageButton
                        android:id="@+id/event4"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/evento_4"
                        android:src="@drawable/musica"
                        android:scaleType="centerCrop"
                        style="@style/ImageButtonStyle"
                        android:background="@drawable/selector_effect"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

                <!-- Tercera fila de eventos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/event5"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/evento_5"
                        android:src="@drawable/queda"
                        android:scaleType="centerCrop"
                        style="@style/ImageButtonStyle"
                        android:background="@drawable/selector_effect"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageButton
                        android:id="@+id/event6"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/evento_6"
                        android:src="@drawable/deporte"
                        android:scaleType="centerCrop"
                        style="@style/ImageButtonStyle"
                        android:background="@drawable/selector_effect"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>
                <!-- Tercera fila de eventos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/event7"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/evento_7"
                        android:src="@drawable/sende"
                        android:scaleType="centerCrop"
                        style="@style/ImageButtonStyle"
                        android:background="@drawable/selector_effect"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>
                    <ImageButton
                        android:id="@+id/event8"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/evento_8"
                        android:src="@drawable/esqui"
                        android:scaleType="centerCrop"
                        style="@style/ImageButtonStyle"
                        android:background="@drawable/selector_effect"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>
                <!-- Tercera fila de eventos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/event9"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="@string/evento_9"
                        android:src="@drawable/picis"
                        android:scaleType="centerCrop"
                        style="@style/ImageButtonStyle"
                        android:background="@drawable/selector_effect"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>

                    <ImageButton
                        android:id="@+id/event10"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/evento_10"
                        android:src="@drawable/diver"
                        android:scaleType="centerCrop"
                        style="@style/ImageButtonStyle"
                        android:background="@drawable/selector_effect"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/nav_button"
            app:itemIconTint="@color/prore"
            app:itemTextColor="@color/blue_1"
            app:labelVisibilityMode="labeled"
            app:backgroundTint="@color/gre"/>
    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/gre"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemTextColor="@color/black"/>
</androidx.drawerlayout.widget.DrawerLayout>